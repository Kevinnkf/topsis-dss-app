<div id="sidebar" class="active">
	<div class="sidebar-wrapper active">
		<div class="sidebar-header position-relative">
			<div class="d-flex justify-content-between align-items-center">
				<div class="logo">
					<a class="h5 text-primary" href="/dashboard">DSS App</a>
				</div>
				<div class="sidebar-toggler d-block d-xl-none">
					<a href="#" class="sidebar-hide"><i class="bi bi-x bi-middle"></i></a>
				</div>
			</div>
		</div>
		<div class="sidebar-menu">
			<ul class="menu">
				<li class="sidebar-item <%= activePage === 'Home' ? 'active' : '' %>">
					<a href="/dashboard" class="sidebar-link">
						<i class="bi bi-grid-fill"></i>
						<span>Dashboard</span>
					</a>
				</li>

				<li
					class="sidebar-item <%= activePage === 'Case Study' ? 'active' : '' %>"
				>
					<a href="/dashboard/case-study" class="sidebar-link">
						<i class="bi bi-newspaper"></i>
						<span>Case Study</span>
					</a>
				</li>

				<li class="sidebar-item">
					<a href="/select-project" class="sidebar-link">
						<i class="bi bi-arrow-left-right"></i>
						<span>Change Project</span>
					</a>
				</li>

				<li class="sidebar-item">
					<a href="/dashboard/logout" class="sidebar-link">
						<i class="bi bi-box-arrow-left"></i>
						<span>Logout</span>
					</a>
				</li>

				<li class="sidebar-title">Menu</li>

				<% if(session.userData.role == "admin") { %>
				<li class="sidebar-item <%= activePage === 'Users' ? 'active' : '' %>">
					<a href="/dashboard/user" class="sidebar-link">
						<i class="bi bi-person-fill"></i>
						<span>Users</span>
					</a>
				</li>
				<% } %>

				<li
					class="sidebar-item has-sub <%= activePage === 'Criteria Header' || activePage ==='Criteria Value' ? 'active' : '' %>"
				>
					<a href="#" class="sidebar-link">
						<i class="bi bi-clipboard-fill"></i>
						<span>Criteria</span>
					</a>
					<ul
						class="submenu <%= activePage === 'Criteria Header' || activePage ==='Criteria Value' ? 'active' : '' %>"
					>
						<li
							class="submenu-item <%= activePage === 'Criteria Header' ? 'active' : '' %>"
						>
							<a href="/dashboard/criteria/header">Header</a>
						</li>
						<li
							class="submenu-item <%= activePage === 'Criteria Value' ? 'active' : '' %>"
						>
							<a href="/dashboard/criteria/value">Value</a>
						</li>
					</ul>
				</li>

				<li
					class="sidebar-item <%= activePage === 'Alternative' ? 'active' : '' %>"
				>
					<a href="/dashboard/alternative" class="sidebar-link">
						<i class="bi bi-shuffle"></i>
						<span>Alternative</span>
					</a>
				</li>

				<li
					class="sidebar-item <%= activePage === 'Evaluation' ? 'active' : '' %>"
				>
					<a href="/dashboard/evaluation" class="sidebar-link">
						<i class="bi bi-check-lg"></i>
						<span>Evaluation</span>
					</a>
				</li>

				<li class="sidebar-item <%= activePage === 'Result' ? 'active' : '' %>">
					<a href="/dashboard/result" class="sidebar-link">
						<i class="bi bi-bar-chart-fill"></i>
						<span>Results</span>
					</a>
				</li>

				<!-- <li class="sidebar-title">Account</li>

				<li
					class="sidebar-item <%= activePage === 'Profile' ? 'active' : '' %>"
				>
					<a href="/dashboard/profile" class="sidebar-link">
						<i class="bi bi-person-circle"></i>
						<span>Profile</span>
					</a>
				</li> -->
			</ul>
		</div>
	</div>
</div>
